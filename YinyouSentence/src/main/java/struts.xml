<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- struts的action配置文件 -->
    <!-- 将action托管给spring -->
    <constant name="struts.objectFactory" value="spring" />

    <!-- 所有的action都应该放在对应的package下 -->
    <!--action的class属性不再是具体的类,而是spring配置文件配置的bean id-->
    <package name="addresslist" namespace="/" extends="struts-default">
        <!--默认首页-->
        <default-action-ref name="login"/>

        <action name="login" class="toLoginOrRegister" method="toLoginOrRegister">
            <result name="success">/WEB-INF/View/login.jsp</result>
        </action>

        <action name="add" class="loginAction" method="login">
            <result name="success">/index.jsp</result>
        </action>
    </package>
</struts>